<div class="card notification-message" id="notification-<%= @id %>">
  <div class="card-body">
    <p class="card-title">
      <strong><%= @type %></strong> - <%= @date %>, <%= @time %>
      <div class="pr-4">
        <button onclick="deleteNotification('<%= @id %>')" class="text-right position-absolute top-0 end-0 text-primary fs-4 btn btn-icon" name="notification-dismiss-button">
          <i class="bi bi-x"></i>
        </button>
      </div>
    </p>
    <p class="collapse" id="collapseExample-<%@id %>"><%= @message %></p>
    <a role="button" class="collapsed" data-bs-toggle="collapse" href="#collapseExample-<%@id %>" aria-expanded="false" aria-controls="collapseExample-<%@id %>"></a>
  </div>
</div>