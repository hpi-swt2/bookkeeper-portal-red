<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label I18n.t("items.form.item.name"), style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label I18n.t("items.form.item.description"), style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label I18n.t("items.form.item.:max_borrowing_days"), style: "display: block" %>
    <%= form.number_field :max_borrowing_days %>
  </div>

  <div>
    <%= form.submit (form.object.new_record? ? I18n.t("items.buttons.new") : I18n.t("items.buttons.update")),
                    :style => "display: none;", id: "item_from_submit", class: "mx-auto btn btn-primary" %>
  </div>
<% end %>