<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Item</th>
      <th scope="col"><%= t("analytics.history.item_category") %></th>
      <th scope="col"><%= t("analytics.history.borrower") %></th>
      <th scope="col"><%= t("analytics.history.date_borrowed")%></th>
      <th scope="col"><%= t("analytics.history.date_returned")%></th>
    </tr>
  </thead>
  <tbody>
    <% @lendings.each do |lending| %>
      <tr>
        <td scope="row"><%= link_to lending.item.name, item_path(lending.item.id) %></td>
        <td><%=
          case lending.item.item_type
          when "book"
            t('items.type.book')
          when "movie"
            t('items.type.movie')
          when "game"
            t('items.type.game')
          when "other"
            t('items.type.other')
          else
            t('items.type.other')
          end
        %></td>
        <td scope="row"><%=link_to lending.user.full_name, profile_path(lending.user)%></td>
        <td title="<%= l lending.started_at, :format => :long %>">
          <%= l lending.started_at, :format => :short %>
        </td>
        <% if (lending.completed_at) %>
          <td title="<%= l lending.completed_at, :format => :long %>">
            <%= l lending.completed_at, :format => :short %>
          </td>
        <% else %>
          <td>
            <%= t('analytics.history.not_returned') %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
