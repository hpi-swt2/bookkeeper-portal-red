<!DOCTYPE html>
<html>
<head>
  <title>Bookkeeper Red</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "notifications", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %> <%# load JS from importmaps %>

  <% if content_for? :head_addition %>
    <%= yield :head_addition %>
  <% end %>
</head>

<body>
  <%= render "layouts/navbar" %>

  <div id="page-container" class="position-relative" style="min-height: 100vh;">
    <div class="bg-white" style="padding-bottom: var(--footer-height);" id="main-content-wrapper">
      <div class="wrapper container d-flex justify-content-between">
        <div class="mx-0 py-5 my-5 w-100">
          <% if notice %><p class="alert alert-success"><%= notice %></p>
          <% end %>
          <% if alert %><p class="alert alert-danger"><%= alert %></p>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>

    <%= render "layouts/footer"%>

  </div>
</body>

</html>
